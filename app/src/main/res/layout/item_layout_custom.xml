<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageViewUserLayout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_1" />

    <TextView
        android:id="@+id/textViewUsernameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageViewUserLayout"
        android:text="saiful alam" />

    <TextView
        android:id="@+id/textViewCGPALayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewUserLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="-3dp"
        android:layout_toRightOf="@+id/imageViewUserLayout"
        android:text="3.33"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <ImageView
        android:id="@+id/imageViewPhoneLayout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageViewUserLayout"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/update_phone"/>



</RelativeLayout>